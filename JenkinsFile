pipeline {
    agent any

    tools {
        maven 'Maven Apache'  // Asegúrate de que este nombre está bien configurado en Jenkins
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }

        stage('Package') {
            steps {
                sh 'mvn package'
            }
        }

        stage('Archive') {
            steps {
                archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
            }
        }
    }

    post {
        success {
            echo 'Build completado exitosamente.'
        }
        failure {
            echo 'Falló el pipeline.'
        }
    }
}
